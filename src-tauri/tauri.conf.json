{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "EyeProtection",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.eyeprotection.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "resources": [
        "../ui/i18n/*.json"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "settings",
        "url": "settings.html",
        "width": 400,
        "height": 350,
        "resizable": false,
        "title": "Eye Protection Settings",
        "visible": false,
        "center": true
      },
      {
        "label": "reminder",
        "url": "reminder.html",
        "fullscreen": true,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "skipTaskbar": true,
        "visible": false
      },
      {
        "label": "about",
        "url": "about.html",
        "width": 500,
        "height": 350,
        "resizable": false,
        "title": "About EyeProtection",
        "visible": false,
        "center": true,
        "decorations": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": true
    }
  }
}